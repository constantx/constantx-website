color_main        = #f4524e
color_light       = #fafaf8
color_text        = #222

base_font_size_px = 18
base_font_size    = (base_font_size_px/16*100)%
base_leading      = 1.6

width_main        = (1037/base_font_size_px)em


tk_text           = "skolar"
tk_heading        = "faricy-new-web"

font_text         = tk_text, Georgia, serif
font_heading      = tk_heading, Georgia, serif
font_meta         = "Panic Sans", inconsolata, Monaco, 'Courier New', monospace



// grid setup
numCol            = 1..12
numColOffset      = 1..11

/////////////////////////////////////////////////////// GRID
calWidth(n)
  n * 8.3333%

.clearfix
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

.container
  position: relative
  margin: 0 auto
  max-width: width_main
  @extend .clearfix

  @media only screen and (max-width: 767px)
    margin: 0 auto
    width: 100%

.row
  @extend .clearfix

.col
  float: left
  position: relative
  padding-left: 1.5%
  padding-right: 1.5%
  min-height: 1px

  &.centered
    float: none
    margin-left: auto
    margin-right: auto


// make col
for num in numCol
  .col-{num}
    width: calWidth(num)

// make offset
for num in numColOffset
  .offset-{num}
    margin-left: calWidth(num)

//
@media only screen and (max-width: 767px)
  // make mobile grid
  for num in numCol
    .col-m-{num}
      float: left !important
      padding-right: 1% !important
      width: calWidth(num) !important

  // make normal column become full width
  .col
    float: none
    width: 100% !important

  // make all offset column full column on mobile
  for num in numColOffset
    .offset-{num}
      margin-left: 0

/////////////////////////////////////////////////////// Base Typography

calcLeading(leading, fontSize)
  result = leading/fontSize
  if result < 1
    result = calcLeading(leading*2, fontSize)
  else
    return result

setHeading(fontSize)
  font-size: fontSize
  line-height: calcLeading(base_leading, fontSize)

body
  margin: 0
  padding: 0
  font-family: font_text
  font-size: base_font_size
  line-height: base_leading
  color: color_text
  background-color: color_light

h1,h2,h3,h4,h5,h6
  font-family: font_heading
  font-weight: bold

h1
  setHeading(3.122em)
h2
  setHeading(2.25em)
h3
  setHeading(2.081em)
h4
  setHeading(1.5em)
h5
  setHeading(1.387em)
h6
  setHeading(1em)
