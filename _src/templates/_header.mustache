<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


  {{! for specific page }}
  {{#page-title}}
  <title>{{{ site-title }}} {{{ page-title }}}</title>
  <meta property="og:title" content="{{{ site-title }}} {{{ page-title }}}" />
  {{/page-title}}

  {{! if not a page }}
  {{^page-title}}

  {{! then it could be a post }}
  {{#title}}
  <title>{{{ site-title }}} {{{ title }}}</title>
  <meta property="og:title" content="{{{ site-title }}} {{{ title }}}" />
  {{/title}}

  {{! not a post?! must be home page }}
  {{^title}}
  <title>{{{ site-title }}}</title>
  <meta property="og:title" content="{{{ site-title }}}" />
  {{/title}}


  {{/page-title}}

  {{! if post has a cover, use it for open graph }}
  {{#cover}}
  <meta property="og:image" content="http://{{host}}{{cover}}" />
  {{/cover}}

  {{^cover}}
  <meta property="og:image" content="" />
  {{/cover}}


  {{! common open graph meta }}
  {{! <meta property="fb:admins" content="" /> }}
  <meta property="og:site_name" content="{{{site-title}}}" />
  <meta property="og:type" content="blog" />
  <meta property="og:description" content="{{{site-description}}}">
  {{! need trailing slash to prevent facebook redirection loop }}
  <meta property="og:url" content="http://{{host}}{{permalink}}/" />


  <meta name="description" content="{{{site-description}}}">

  {{! VIEWPORT }}
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

  {{#stylesheet_bundle}}/css/main.css{{/stylesheet_bundle}}

  {{! script vendor }}
  <script src="/js/vendor/modernizr-2.6.2.min.js"></script>

  {{! typekit? }}
  <script type="text/javascript" src="//use.typekit.net/tme8hga.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  {{! google analytics? }}

</head>
<body>
  <!--[if lt IE 7]>
    <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
  <![endif]-->

  <header class='main-header'>
    <div class="container">

      <h1>
        <a class='logo' href="/" title="{{ site-title }} by {{ creator }}">{{{ site-title }}}</a>
      </h1>

      <nav role="main_nav" class="main-nav">
        <div class="container">
          <ul class="main-nav-items">
            <li class='main-nav-item'>
              <a id="home" class="link_with_icon {{#current}}/{{/current}}" href="/">   {{! <span role="icon" aria-hidden="true" class="icon-home"></span> }}
                <span role="title">Home</span>
              </a>
            </li>

            <li class='main-nav-item'>
              <a id="about" class="link_with_icon {{#current}}/about{{/current}}" href="/about">
                {{! <span role="icon" aria-hidden="true" class="icon-user"></span> }}
                <span role="title">About</span>
              </a>
            </li>

            <li class='main-nav-item'>
              <a id="archive" class="link_with_icon {{#current}}/archive{{/current}}" href="/archive">
                {{! <span role="icon" aria-hidden="true" class="icon-book"></span> }}
                <span role="title">Archive</span>
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </header>


