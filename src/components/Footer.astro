---
import Social from '@/components/Social.astro';

const currentYear = new Date().getFullYear();

type Props = {
  title: string;
  class?: string;
};

const { title, class: className } = Astro.props;
---

<footer class:list={['text-cream uppercase tracking-widest text-xs grid grid-cols-6 gap-6 lg:gap-12 font-mono', className]}>
  <div class:list={`text-cream border-t px-1 py-4 inline-block col-span-3 md:col-span-2 lg:col-span-2 xl:col-span-1`}>
    &copy; {currentYear} {title}
  </div>
  <Social class='col-start-4 border-t col-span-3 lg:col-start-5 lg:col-span-2 text-cream uppercase tracking-widest text-xs px-1 py-4'/>
</footer>