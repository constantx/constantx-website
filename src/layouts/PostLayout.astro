---
import MainLayout from '@/layouts/MainLayout.astro';
import { type CollectionEntry } from 'astro:content';

interface Props {
  title?: string;
  description?: string;
  post: CollectionEntry<'thoughts'>;
}

const { title, description, post } = Astro.props;
---

<MainLayout title={title} description={description} post={post}>
  <article class="prose grid grid-cols-6 gap-4 relative">
    <slot />
  </article>
</MainLayout>