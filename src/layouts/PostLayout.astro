---
import MainLayout from '@/layouts/MainLayout.astro';

interface Props {
  title: string;
  description?: string;
  publishedAt: Date;
  updatedAt?: Date;
  heroImage?: string;
  topics?: string[];
  draft?: boolean;
}

const { 
  title, 
  description,
} = Astro.props;
---

<MainLayout title={title} description={description}>
  <article class="prose grid grid-cols-6 gap-4">
    <slot />
  </article>
</MainLayout>