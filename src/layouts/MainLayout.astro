---
import BaseHead from '@/components/BaseHead.astro';

interface Props {
  title: string;
  description?: string;
  isHomepage?: boolean;
}

const { title, description } = Astro.props;
const siteDescription = "Designer & Hacker"; // Add your site description
---

<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <BaseHead title={title} description={description || siteDescription} />
  </head>
  
  <body class='min-h-screen'>
    <slot />
  </body>
</html> 
