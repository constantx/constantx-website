{
  "template_dir": "./templates",
  "content_dir": "./contents",
  "output_dir": "./dist",

  "server": {
    "port": 5000
  },

  "bundles": {
    "/css/main.css": [
      "/css/main.styl"
    ]
  },

  "generator": {
    "blank" : true,
    "skip_paths": [
      "/css/*"
    ]
  },

  "blog": {
    "posts_dir": "posts",
    "post_format": "markdown",
    "post_url": "/post/{year}/{month}/{date}/{title}",
    "teaser_length": 1,
    "homepage_posts": 1,

    "archive_urls": {
      "all": "/archive",
      "year": "/{year}",
      "year_month": "/{year}/{month}",
      "year_month_date": "/{year}/{month}/{date}",
      "tag": "/tag/{tag}"
    }
  },

  "thirdparty_snippets": {
    "google_analytics": {
      "universal": true,
      "property_id": "UA-2383160-28",
      "property_domain": "constantx.com"
    },

    "typekit": {
      "id": "uqu1gng"
    },

    "disqus": {
      "shortname": "constantx"
    },

    "tweet_button": {
      "via": "constantx"
    }
  },

  "sitemap_generator": {
    "url_root": "http://constantx.com"
  },

  "plugins": {
    "content_handler": "punch-blog-content-handler",

    "helpers": {
      "formatted_date": "./helpers/formatted_date_helper.js",
      "archive_helper": "./helpers/archive_helper.js",
      "index_helper": "./helpers/index_helper.js",
      "feed_helper": "./helpers/feed_helper.js",
      "current_helper": "punch-current-page-helper",
      "thirdparty_snippets_helper": "punch-thirdparty-snippets-helper"
    },

    "generator_hooks": {
      "sitemap_generator_hook": "punch-sitemap-generator",
      "cname_hook": "./helpers/cname_hook.js"
    },

    "compilers": {
      ".css": "punch-stylus-compiler"
    }

  }
}
