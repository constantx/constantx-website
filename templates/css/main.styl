@import "base"
@import "animate"
@import "vendor/typicons.min"



html
  height: 100%
  min-height: 30em

body
  box-sizing: border-box
  position: relative
  min-height: 100%
  border-top: solid 1em color_main
  background: black url('../img/cover.jpg') center bottom no-repeat
  background-size: cover
  font-variant-ligatures: common-ligatures
  @media (-webkit-min-device-pixel-ratio: 2) and (min-width: 640px), (min-resolution: 192dpi)
    background: url('../img/cover@2x.jpg') center bottom no-repeat
    background-size: cover

/////////////////////////////////////////////////////// Helpers
.has-shadow
  text-shadow: .05em .05em 0.02em rgba(0,0,0,0.5)



/////////////////////////////////////////////////////// MAIN
.tagline
  display: block
  padding: 0.5em 0
  font-family: font_sans
  text-align: center
  font-weight: normal
  color: color_light
  @extend .has-shadow
  setHeading(2.56)
  @media only screen and (min-width: 769px)
    setHeading(4.096)
  @media only screen and (min-width: 1024px)
    setHeading(5.425)


.page-bio
  @extend .has-shadow
  text-align: center
  color: color_light
  font-size: 12px
  font-family: font_meta

.main-header
  position: relative
  z-index: 1000
  padding: 7em 0 1em


.main-content
  &:before
    @extend .wander
    content: ""
    display: block
    width: 100%
    height: 1px
    background-color: color_dark


.main-nav
  padding: 1em 0

  .main-nav-items
    list-style: none
    text-align: center

  .main-nav-item
    margin: 0 0.5em
    display: inline-block
    text-transform: uppercase

    .item-link
      font-size: 1em
      border-bottom: none
      &:hover
        color: color_main
        border-bottom: solid 5px color_main
        margin-bottom: -5px

    &.current
      .item-link
        border-bottom: solid 5px color_main
        margin-bottom: -5px

    @media only screen and (min-width: 769px)
      margin: 0 1em
      letter-spacing: 0.05em

  &.social
    padding: 0

    .item-link
      color: color_light
      font-size: 2em
      opacity: 0.5
      &:hover
        opacity: 1

.main-footer
  position: absolute
  bottom: 0.5em
  left: 0
  right: 0
  z-index: 2

